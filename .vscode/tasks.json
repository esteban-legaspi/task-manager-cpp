{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SQLite (C)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-c",
                "lib/sqlite3.c",
                "-o",
                "sqlite3.o"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build App (C++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "sqlite3.o",
                "-o",
                "app.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build SQLite (C)"
            ],
            "problemMatcher": ["$gcc"]
        }
    ]
}
